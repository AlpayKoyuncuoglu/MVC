@using TravelTrip.Models.Classes
@model List<Blog>
@foreach (var x in Model)
{

    <div class="right">
        <div class="bot-left">
            <img src="@x.BlogImage"style="width:300px; height:150px;" alt="" />
        </div>
        <div class="left-text">
            <h4>@x.Title</h4>
            <span class="doller">$1024.99</span>
            <p>@x.Explanation.Substring(0,120)</p>
            <p><a href="/Blog/BlogDetail/@x.ID"><span class="read">Read More >></span></a></p>
        </div>
    </div>
}