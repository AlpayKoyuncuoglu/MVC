            <div class="col-md-8 single-main">
                @foreach (var x in Model.Value1)
                {
                    <div class="single-grid">
                        <a style="font-size:30px;color:#333300;" href="/Blog/BlogDetail/@x.ID"><u>@x.Title</u></a>
                        <img src="@x.BlogImage" alt="" style="margin-top:10px" />
                        <p style="color:black">
                            @x.Explanation
                            <br />
                            <a href="/Blog/BlogDetail/@x.ID"><span class="read">Click for details & comment >></span></a>
                        </p>
                        <br />
                    </div>
                }
            </div>

            <div class="col-md-4 side-content">
                <div class="recent">

                    <h3 style="font-size:20px;color:#333300;margin-top:15px;margin-left:15px"><u>RECENT POSTS</u></h3>
                    @foreach (var y in Model.Value3)
                    {
                        <ul>
                            <li><a style=" font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; margin-left:15px;font-size:15px;color:#333300;color:black" href="/Blog/BlogDetail/@y.ID ">@y.Title</a></li>
